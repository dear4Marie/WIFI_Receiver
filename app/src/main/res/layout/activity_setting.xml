<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll">


    <TextView
        android:id="@+id/txtBoxReverse"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="0.05"
        android:text="Reverse"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"/>

    <ListView
        android:id="@+id/listViewReverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="multipleChoice" />

    <CheckBox
        android:id="@+id/cbReverseCh1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cbReverseCh2"
        android:duplicateParentState="false"
        android:gravity="center_vertical"
        android:text="Channel 1" />

    <CheckBox
        android:id="@+id/cbReverseCh2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtEpa"
        android:layout_weight="1"
        android:text="Channel 2"
        android:gravity="center_vertical"/>

    <CheckBox
        android:id="@+id/cbReverseCh3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cbReverseCh1"
        android:layout_weight="1"
        android:text="Channel 3"
        android:gravity="center_vertical"/>

    <CheckBox
        android:id="@+id/cbReverseCh4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cbReverseCh1"
        android:layout_weight="0.05"
        android:text="Channel 4"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/txtEpa"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="0.05"
        android:text="End Point Adjust"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"/>

</LinearLayout>